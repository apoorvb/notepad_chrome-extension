{
  "manifest_version": 3,
  "name": "Notepad",
  "version": "1.0",
  "description": "A simple notepad that saves automatically",
  "icons": {
    "16": "icons/img16.png",
    "48": "icons/img48.png",
    "128": "icons/img128.png"
  },
  "action": {
    "default_icon": "icons/img48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
   
  "background": {
    "service_worker": "service-worker.js"
  }
}
